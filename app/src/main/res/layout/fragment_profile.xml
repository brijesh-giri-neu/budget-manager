<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Consistent title -->
    <TextView
        android:id="@+id/budget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/profile"
        android:textAlignment="center"
        android:textSize="20sp" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Personal Details -->
            <TextView
                android:id="@+id/personalDetailsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="@string/personal_details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="#e6deff"
                app:drawableStartCompat="@drawable/ic_account" />

            <!-- Name display -->
            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/profile_name"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:padding="4dp" />

            <!-- Email display -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/profile_email"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:padding="4dp" />

            <!-- Alert Settings -->
            <TextView
                android:id="@+id/alertSettingsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="@string/alert_settings"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="#f2eaff"
                app:drawableStartCompat="@drawable/ic_notification_active" />

            <!-- Toggle for Location-based Alerts -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchLocationAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/location_based_alerts"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Expense Categories -->
            <TextView
                android:id="@+id/expenseCategoriesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="@string/expense_categories"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="#e6deff"
                app:drawableStartCompat="@drawable/ic_money" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupExpenseCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNewCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_new_category"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="@string/sign_out"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
